<% if logged_in? %>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                User's Profile
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <textarea class="form-control" rows="3"></textarea>
                    <button class="btn btn-primary btn-block" style="margin-top: 10px;">投稿</button>    
                </div>
            </div>
        </div>
    </div>
<% else %>
    <div class="container">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                ログアウト中です。<%= link_to 'ログイン', login_path %>してください。
            </div>
        </div>
    </div>
<% end %>